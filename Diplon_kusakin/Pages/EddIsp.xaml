<Page x:Class="Diplon_kusakin.Pages.EddIsp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplon_kusakin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EddIsp">

    <Grid Background="AliceBlue">
        <Grid VerticalAlignment="Top" Height="50" Background="#008080">
            <Label Content="Изменение сотрудника" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" Foreground="White" />
            <Button Background="White" x:Name="butback" Content="Назад" Margin="0,10,35,10" Height="30" Click="butback_Click" Foreground="Black" FontWeight="Bold" FontSize="14" BorderThickness="0" HorizontalAlignment="Right" Width="107">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0">
            <Label Content="ФИО" FontSize="15"/>
            <TextBox Name="fio1" Height="27"  TextWrapping="Wrap" Text="" Width="281" BorderThickness="0,0,0,1.5" FontSize="16">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Label Content="Почта" FontSize="15"/>
            <TextBox Name="email" Height="27"  TextWrapping="Wrap" Text="" Width="277" BorderThickness="0,0,0,1.5" FontSize="16">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Content="Логин" FontSize="15"/>
            <TextBox Name="log" Height="27"  TextWrapping="Wrap" Text="" Width="279" BorderThickness="0,0,0,1.5" FontSize="16">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <Label Content="Пароль" FontSize="15"/>

            <TextBox  x:Name="pas" Height="27"  Width="279" BorderThickness="0,0,0,1.5" FontSize="15">
                <TextBox.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <Button Background="#1268b3" x:Name="butreg" Content="Изменить" Margin="0,15,0,0" Width="160" Height="30" Click="Edd_Click" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Grid>
</Page>
