<Page x:Class="Diplon_kusakin.Pages.User"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplon_kusakin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User">

    <Page.Resources>
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#001F3F" Offset="0" />
            <GradientStop Color="#0074D9" Offset="1" />
        </LinearGradientBrush>

        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="5"
                          Direction="270"
                          Color="Black"
                          Opacity="0.5"/>

        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1268b3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border CornerRadius="10"
                Background="White"
                Padding="20"
                Margin="30"
                Effect="{StaticResource DropShadowEffect}">

            <Grid>
                <!-- Верхняя панель -->
                <Grid VerticalAlignment="Top" Height="50" Background="Transparent">
                    <Label Content="Пользователи"
                           FontSize="24"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="{StaticResource BackgroundBrush}" Margin="29,0,0,0"/>

                    <Button Content="Назад"
                            Width="100"
                            Height="30"
                            Background="{StaticResource BackgroundBrush}"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Margin="10"
                            Click="Button_Click"
                            VerticalAlignment="Center"
                            Style="{StaticResource FormButtonStyle}"/>

                    <TextBox x:Name="searchTextBox"
                             Height="30"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Left"
                             Width="200"
                             Margin="253,13,0,0"
                             FontSize="14"
                             Padding="5"/>

                    <Button Content="Поиск"
                            Height="NaN"
                            Width="60"
                            HorizontalAlignment="Left"
                            Margin="469,10,0,10"
                            Click="SearchButton_Click"
                            Background="#FF2196F3"
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="12"
                            BorderThickness="0"
                            Style="{StaticResource FormButtonStyle}"/>
                </Grid>

                <!-- Список пользователей -->
                <Grid Margin="0,60,0,60">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView x:Name="usersListView" ItemsSource="{Binding userRequests}" Margin="10">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding Full_Name}" Width="150"/>
                                    <GridViewColumn Header="Контактная информация" DisplayMemberBinding="{Binding Contact_Information}" Width="200"/>
                                    <GridViewColumn Header="Логин" DisplayMemberBinding="{Binding Username}" Width="100"/>
                                    <GridViewColumn Header="Пароль" DisplayMemberBinding="{Binding Password}" Width="100"/>

                                    <GridViewColumn Header="Редактировать" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Редактировать"
                                                        Click="EditUser_Click"
                                                        CommandParameter="{Binding}"
                                                        Width="100"
                                                        Height="28"
                                                        Style="{StaticResource FormButtonStyle}"
                                                        Background="White"
                                                        Foreground="Black"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Удалить" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Удалить"
                                                        Click="DeleteUser_Click"
                                                        CommandParameter="{Binding}"
                                                        Width="100"
                                                        Height="28"
                                                        Style="{StaticResource FormButtonStyle}"
                                                        Background="White"
                                                        Foreground="Black"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Grid>

                <!-- Кнопка добавления -->
                <Grid Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10">
                    <Button Content="Добавить пользователя"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="{StaticResource BackgroundBrush}"
                            Foreground="White"
                            BorderThickness="1"
                            Width="220"
                            Height="35"
                            Click="AddUser_Click"
                            Style="{StaticResource FormButtonStyle}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
