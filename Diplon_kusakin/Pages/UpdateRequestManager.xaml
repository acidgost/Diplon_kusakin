<Page x:Class="Diplon_kusakin.Pages.UpdateRequestManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:Diplon_kusakin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateRequestManager"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Градиентный фон -->
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#001F3F" Offset="0"/>
            <GradientStop Color="#0074D9" Offset="1"/>
        </LinearGradientBrush>

        <!-- Тень -->
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="5"
                          Direction="270"
                          Color="Black"
                          Opacity="0.5"/>

        <!-- Анимационный стиль кнопок -->
        <Style x:Key="FormButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1268b3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border CornerRadius="10"
                Background="White"
                Padding="20"
                Margin="60"
                Effect="{StaticResource DropShadowEffect}"
                x:Name="MainContainer"
                Opacity="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок и кнопка Назад -->
                <Grid Grid.Row="0">
                    <TextBlock Text="Назначение исполнителя"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="10"
                               HorizontalAlignment="Center"/>
                    <Button Content="Назад"
                            Width="100"
                            Height="30"
                            FontWeight="Bold"
                            FontSize="14"
                            HorizontalAlignment="Right"
                            Click="Button_Click"
                            Margin="10"
                            Style="{StaticResource FormButtonStyle}"/>
                </Grid>

                <!-- Форма -->
                <StackPanel Grid.Row="1"
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">

                    <TextBlock Text="Назначить исполнителя:"
                               FontSize="16"
                               Margin="0,10,0,5"/>
                    <ComboBox x:Name="ComboBoxAigree"
                              Height="35"
                              Width="300"
                              FontSize="16"
                              BorderBrush="#1268b3"
                              BorderThickness="0,0,0,1.5"/>

                    <TextBlock Text="Дата окончания:"
                               FontSize="16"
                               Margin="20,20,0,5"/>
                    <DatePicker x:Name="DatePicker"
                                Height="35"
                                Width="300"
                                FontSize="16"
                                BorderBrush="#1268b3"
                                BorderThickness="0,0,0,1.5"
                                DisplayDateStart="{x:Static sys:DateTime.Today}"/>
                </StackPanel>

                <!-- Кнопка сохранить -->
                <Button Grid.Row="2"
                        Content="Сохранить изменения"
                        Click="btnSave_Click"
                        HorizontalAlignment="Center"
                        Margin="0,30,0,0"
                        Style="{StaticResource FormButtonStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
